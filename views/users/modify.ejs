<!doctype html>
<head>
    <title>更新文章</title>
</head>
<body>
    <% include /../header %>
    <div style='padding:50px;'>
        <%-'<form name="modify" action="/apis/update/'+messageID+'" method="post">'%>
            <h1>更新文章</h1>
            <div>
                <p>
                    <span>發文者:</span>
                    <label style='padding-right:50px'><%=username%></label>
                </p>
